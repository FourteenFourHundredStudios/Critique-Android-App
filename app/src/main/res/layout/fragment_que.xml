<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:background="#0D000000"
    android:layout_margin="0dp"
    android:orientation="vertical"

    tools:context="critique.fourteenfourhundred.marc.critique.QueFragment">




    <LinearLayout
        android:id="@+id/usernameBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="fill"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="vertical"
            android:paddingBottom="10dp"


            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fake Post!"
                android:textColor="#BF000000"
                android:textSize="25sp" />


            <TextView

                android:id="@+id/postSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marc Fervil"
                android:textSize="15sp"></TextView>

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1.5">

            <android.support.v7.widget.CardView
                android:id="@+id/queProfilePicHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:padding="0dp"
                android:background="#ffffff"
                android:scaleType="centerCrop">

                <ImageView

                    android:id="@+id/queProfilePic"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>




    <ScrollView
        android:layout_below="@id/usernameBar"
        android:layout_above="@id/bottom_toolbar"
        android:layout_width="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/postContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:paddingBottom="0dp"
                android:text="I want to let the reocrds reflect that I got two singned Picaso's in the trunk right now"
                android:textColor="#D0000000"
                android:textSize="21sp"
                android:typeface="monospace"></TextView>


            <TextView
                android:id="@+id/postVoteCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:text="1000 votes"
                android:textSize="15sp"
                android:typeface="monospace"></TextView>



        </LinearLayout>




    </ScrollView>

    <!--
    android:layout_height="?attr/actionBarSize"
    -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"

        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:background="#25000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="comment goes here"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#FFFFFF"
                android:padding="6dp"
                />


            <LinearLayout
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:orientation="horizontal">



                <ImageButton


                    android:id="@+id/voteGood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"

                    android:src="@drawable/arrow_up" />


                <ImageButton
                    android:id="@+id/voteBad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@null"
                    android:src="@drawable/arrow_down" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>







</RelativeLayout>
