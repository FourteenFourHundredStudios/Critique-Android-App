<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:background="#0D000000"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="critique.fourteenfourhundred.marc.critique.QueFragment">




    <LinearLayout
        android:id="@+id/usernameBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="fill"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="vertical"
            android:paddingBottom="10dp"


            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fake Post!"
                android:textColor="#BF000000"
                android:textSize="25sp" />


            <TextView

                android:id="@+id/postSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marc Fervil"
                android:textSize="15sp"></TextView>

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1.5">

            <android.support.v7.widget.CardView
                android:id="@+id/queProfilePicHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:padding="0dp"
                android:background="#ffffff"
                android:scaleType="centerCrop">

                <ImageView

                    android:id="@+id/queProfilePic"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_toolbar"
        android:layout_below="@id/usernameBar"
        android:fillViewport="true"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/postContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:paddingBottom="0dp"
                android:text="I want to let the reocrds reflect that I got two singned Picaso's in the trunk right now"
                android:textColor="#D0000000"
                android:textSize="21sp"
                android:typeface="monospace"></TextView>


            <TextView
                android:id="@+id/postVoteCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:text="1000 votes"
                android:textSize="15sp"
                android:typeface="monospace"></TextView>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



    <!--
    android:layout_height="?attr/actionBarSize"
    -->








</RelativeLayout>
