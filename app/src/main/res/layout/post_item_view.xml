<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="10dp">



    <android.support.v7.widget.CardView

        android:id="@+id/postItemPictureHolder"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_margin="7dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/userPatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/vuelogo" />


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/postTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The birds won"
        android:textSize="22sp"
        android:layout_margin="0dp"
        android:textColor="#BF000000"
        android:layout_toRightOf="@id/postItemPictureHolder"
        />

    <TextView
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTitle"
        android:text="We can pack it up now bois"
        android:textSize="15sp"

        android:layout_margin="0dp"

        android:layout_toRightOf="@id/postItemPictureHolder"
        />

</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
