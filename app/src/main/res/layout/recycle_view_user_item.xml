<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/queProfilePicHolder"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/profPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>


    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:weightSum="100"

        android:layout_weight="50">

        <TextView
            android:id="@+id/username"
            android:text="Marc"


            android:layout_marginTop="0dp"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"


            android:autoSizeTextType="uniform"

            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/points"
            android:text="5000 points"
            android:autoSizeTextType="uniform"
            android:layout_margin="0dp"
            android:layout_weight="60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:id="@+id/buttonHolder">


        <Button
            android:id="@+id/mutualButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"


            android:background="@drawable/round_button_bad"
            android:stateListAnimator="@null"
            android:textColor="#FFFFFF"
            android:text="mutual"

            />

        <Button
            android:id="@+id/pendingButton"
            android:background="@drawable/round_button_good"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="10dp"

            android:textColor="@color/colorPrimary"
            android:stateListAnimator="@null"

            android:text="pending"
            />


        <Button
            android:id="@+id/followButton"
            android:background="@drawable/round_button_follow"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="10dp"

            android:textColor="#FFFFFF"
            android:stateListAnimator="@null"

            android:text="follow"
            />

        <ProgressBar
            android:layout_margin="15dp"
            android:id="@+id/buttonProgress"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </RelativeLayout>



</LinearLayout>