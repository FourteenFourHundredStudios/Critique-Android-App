<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fourteenfourhundred.critique.critique">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.fourteenfourhundred.critique.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.fourteenfourhundred.critique.activities.HomeScreen.HomeActivity" />
        <activity android:name="com.fourteenfourhundred.critique.activities.ComposeActivity" />
        <activity
            android:name="com.fourteenfourhundred.critique.activities.SelectMutualsActivity"
            android:label="@string/title_activity_mutuals"
            />

        <service
            android:enabled="true"
            android:name="com.fourteenfourhundred.critique.util.ExitService"
            android:exported="false"
            android:stopWithTask="false" />

    </application>

</manifest>